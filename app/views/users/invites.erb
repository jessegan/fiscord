<a href="/groups"><i class="material-icons left">arrow_back</i>Back to home</a>

<div class="container">
    <div class="row">
        <div class="col s12">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Group Invites</h4></li>
                <%if @invites.empty?%>
                    <li class="collection-item">You have no invites.</li>
                <%else%>
                    <%@invites.each do |invite|%>
                        <li class="collection-item"><div>
                        <strong><%=invite.group.display_name%></strong> has invited you to join
                        <form style="margin-top: 5px;" method='POST' action='/invites'>
                            <input type='hidden' name='invite_id' value='<%=invite.id%>'>
                            <button class="btn" type='submit' name='action' value='Accept'>Accept</button>
                            <button class="btn" type='submit' name='action' value='Decline'>Decline</button>
                        </form>           
                        </div></li>
                    <%end%>
                <%end%>

            </ul>
        </div>
    </div>
</div>