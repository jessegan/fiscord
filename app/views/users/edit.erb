<a href="/profile"><i class="material-icons left">arrow_back</i>Back to profile</a>

<div class="container">
    <div class="row">
        <form class="col s12" method='POST' action='/profile'>
            <input type='hidden' id='hidden' name='_method' value='PATCH'>

            <div class="row">
                <div class="col s12">
                    <div class="input-field">
                        <input id="name" type='text' name='user[name]' value='<%=@user.name%>' class='validate' required>
                        <label for="name">Enter Name</label>
                    </div>
                </div>
            </div>

            <input type='hidden' name='user[password]' value="1">

            <div class="row">
                <div class="col s12">
                   <button class="btn blue-grey" type='submit'>Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

