<div class="container">
    <div class="row">
        <div class="col s12">
            <h3><%=@user.name%></h3>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <a class="btn-small blue-grey" href='/profile/edit'>Change Name</a>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <h5>Groups Joined: <%=@group_count%></h5>
        </div>
        <div class="col s12">
            <h5>Messages Sent: <%=@messages_count%></h5>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <a class="btn-small red" href='/logout'>Logout</a>
        </div>
    </div>
</div>