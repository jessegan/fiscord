<a href='/groups/<%=@group.slug%>/c/<%=@channel.slug%>'><i class="material-icons left">arrow_back</i>Back to #<%=@channel.name%></a>

<div class="container">
    <div class="row">
        <h1 class="col s12">Edit #<%=@channel.name%></h1>
    </div>

    <div class="row">
        <form class="col s12" method='POST' action='/groups/<%=@group.slug%>/c/<%=@channel.slug%>'>
            <input type='hidden' id='hidden' name='_method' value='PATCH'>

            <div class="row">
                <div class="col s6">
                    <div class="input-field">
                        <input id="channel-name" type='text' name='channel[name]' value='<%=@channel.name%>' class="validate" required>
                        <label for="channel-name">Channel Name</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <button class="btn blue-grey" type="submit">Save</button>
                </div>
            </div>

        </form>
    </div>

    <div class="row">
        <form class="col s12" method='POST' action='/groups/<%=@group.slug%>/c/<%=@channel.slug%>'>
            <input type='hidden' id='hidden' name='_method' value='DELETE'>

            <button class="btn red" type='submit'>Delete Channel</button>
        </form>
    </div>

</div>
