<a href='/groups/<%=@group.slug%>/members'><i class="material-icons left">arrow_back</i>Back to members</a>

<div class="container">
    <!-- new members list -->
    <div class="row">
        <div class="col s12">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Invite New Members</h4></li>
                    <% if @other_users.empty? %>
                        <li class="collection-item">No Users to Invite.</li>
                    <% else %>
                        <%@other_users.each do |user|%>
                            <form id='invite-<%=user.id%>' method='POST' action='/groups/<%=@group.slug%>/invite'> 
                                <input type='hidden' name='user_id' value='<%=user.id%>'> 
                                <input type='submit' hidden>
                            </form>

                            <li class="collection-item"><div><strong><%=user.name%></strong>
                            <% if @invites_sent.include?(user) %>
                                <a class="secondary-content grey-text">Invite Sent</a>
                            <% else %>
                                <a class="secondary-content" href="javascript:{}" onclick="document.getElementById('invite-<%=user.id%>').submit(); return false;">Invite</a>
                            <% end %>                            
                            </div></li>

                        <%end%>
                    <% end %> 
            </ul>
        </div>
    </div>
    <!-- end new members list -->
</div>