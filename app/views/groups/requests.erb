<a href='/groups/<%=@group.slug%>/members'><i class="material-icons left">arrow_back</i>Back to members</a>

<div class="container">
    <div class="row">
        <div class="col s12">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Requests to Join</h4></li>
                <%if @requests.empty?%>
                    <li class="collection-item">Requests list is empty.</li>
                <%else%>
                    <%@requests.each do |request|%>
                        <li class="collection-item"><div>
                        <strong><%=request.group.display_name%></strong> wants to join
                        <form style="margin-top: 5px;" method='POST' action='/groups/<%=@group.slug%>/requests'>
                            <input type='hidden' name='request_id' value='<%=request.id%>'>
                            <button class="btn" type='submit' name='action' value='Accept'>Accept</button>
                            <button class="btn" type='submit' name='action' value='Decline'>Decline</button>
                        </form>           
                        </div></li>
                    <%end%>
                <%end%>

            </ul>
        </div>
    </div>
</div>