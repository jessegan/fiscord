<a href='/groups/<%=@group.slug%>'>Back to channels</a>

<h1>Edit Group Details</h1>

<form method='POST' action='/groups/<%=@group.slug%>'>
<input type='hidden' id='hidden' name='_method' value='PATCH'>

Name <input type='text' name='group[name]' value='<%=@group.name%>'>
Display Name <input type='text' name='group[display_name]' value='<%=@group.display_name%>'>

<br><br>
<!-- Set Admins -->
<h3>Edit Admins</h3>
<%@members.each do |member|%>
    <p><%=member.user.name%> <input type=<%=member.user==@user ? 'hidden' : 'checkbox'%> name='admins[]' value='<%=member.id%>' <%='checked' if member.admin==true%>></p>
<%end%>

<!-- Save Button -->
<input type='submit' value='Save'>
</form>
<br>

<!-- Delete Group Button -->
<h2></h2>
<form method='POST' action='/groups/<%=@group.slug%>'>
    <input type='hidden' id='hidden' name='_method' value='DELETE'>
    <input type='submit' value='Delete Group'>
</form>