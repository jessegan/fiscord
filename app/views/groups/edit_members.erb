<a href='/groups/<%=@group.slug%>/members'><i class="material-icons left">arrow_back</i>Back to members</a>

<div class="container">

    <!-- members list -->
    <div class="row">
        <div class="col s12">
            <ul class="collection with-header">
                <li class="collection-header"><h4 style="display:inline;">Edit Members</h4><span class="grey-text">/<%=@group.display_name%></span><a class="secondary-content grey-text">Select to remove</a></li>

                <form method='POST' action='/groups/<%=@group.slug%>/members'>
                    <input type='hidden' id='hidden' name='_method' value='PATCH'>
                    <!-- List current members in a form to remove -->
                    <%@members.each do |member|%>

                        <li class="collection-item"><div><strong><%=member.user.name%></strong>
                        
                        <% if member.admin %>
                            <a class="secondary-content grey-text">Admin</a>
                        <% else %>
                            <label class="secondary-content">
                                <input class="filled-in" type='checkbox' name='user_ids[]' value='<%=member.user.id%>'>
                                <span></span>
                            </label>

                           
                        <% end %>       
                                     
                        </div></li>

                    <%end%>
            </ul>            
        </div>
    </div>
    <!-- end members list -->

    <div class="row">
        <div class="col s12">
            <button class="btn blue-grey right">Save</button>
            </form>
        </div>
    </div>
    
</div>